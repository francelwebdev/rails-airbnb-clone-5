<div id="particles-js">
</div>
<div class="hero-wrapper">
  <div class="container">
    <div class="hero-content">
      <div class="banner-content">
        <h1>Rent a place in a galaxy near you</h1>
        <div class="row">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3">
          <form class="form-inline" action="/places/search">
            <div class="form-group">
            <label class="sr-only" for="search">Search</label>
            <input type="text" class="form-control" id="search" name="query" placeholder="Find your dream destination">
            </div>
            <button type="submit" class="btn btn-default btn-lg"><i class="fa fa-search"></i></button>
          </form>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="wrapper">
  <div class="container">
    <h1>Places near you</h1>
    <div class="row", id="place-list">
      <%= render "list" %>
    </div>
  </div>
</div>

<div class='button-wrapper'>
<%= link_to 'Add new place', new_place_path(@place), class: "btn btn-success btn-lg" %>
</div>
