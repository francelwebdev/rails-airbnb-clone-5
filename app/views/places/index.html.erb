<div id="particles-js">
</div>
<div class="hero-wrapper">
  <div class="container">
    <div class="banner-content">
      <h1>Rent a place in a galaxy near you</h1>
      <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <form class="form-inline">
          <div class="form-group">
          <label class="sr-only" for="search">Search</label>
          <input type="text" class="form-control" id="search" placeholder="Find your dream destination">
          </div>
          <button type="submit" class="btn btn-default btn-lg hidden">Search</button>
        </form>
      </div>
      </div>
    </div>
  </div>
</div>


<div class="wrapper">
  <div class="container">
    <h1>Places near you</h1>
    <div class="row", id="place-list">
      <% @places.each do |place| %>
      <div class="col-xs-12 col-sm-4 col-md-3">
        <div class="card text-center">


          <div class="card-header" style="background-image: url('<%= cl_image_path place.photo, height: 300, width: 400, crop: :fill %>')">
          </div>


          <div class="card-description">
            <h3><%= place.name %></h3>
          </div>
          <%= link_to "", place_path(place), class: "card-link" %>
        </div>
      </div>
      <% end %>
    <%= link_to 'Add new place', new_place_path(@place), class: "btn btn-success btn-lg" %>
  </div>
</div>


